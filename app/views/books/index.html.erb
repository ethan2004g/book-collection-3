<div style="text-align: center;"> 
  <h1>Library Catalog</h1>

  <h2>Notifications:</h2>
  <% if flash[:notice] %>
    <h3 style="color: green;"><%= flash[:notice] %></h3>
  <% else %>
    <h3>None!</h3>
  <% end %>

  <table style="margin: 0 auto; border-collapse: collapse; width: 80%;">
    <thead>
      <tr>
        <th style="padding: 10px; border-bottom: 2px solid #ddd; font-weight: bold;">Title</th>
        <th style="padding: 10px; border-bottom: 2px solid #ddd; font-weight: bold;">Author</th>
        <th style="padding: 10px; border-bottom: 2px solid #ddd; font-weight: bold;">Price</th>
        <th style="padding: 10px; border-bottom: 2px solid #ddd; font-weight: bold;">Published Date</th>
        <th style="padding: 10px; border-bottom: 2px solid #ddd;">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= book.title %></td>
          <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= book.author %></td>
          <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= number_to_currency(book.price) %></td>
          <td style="padding: 10px; border-bottom: 1px solid #ddd;"><%= book.published_date&.strftime('%B %d, %Y') %></td>
          <td style="padding: 10px; border-bottom: 1px solid #ddd;">
            <%= link_to "Show", "/show/#{book.title}", style: "margin: 0 5px;" %>
            <%= link_to "Remove", "/remove/#{book.title}/confirm", style: "margin: 0 5px;" %>
            <%= link_to "Edit", "/edit/#{book.title}", style: "margin: 0 5px;" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div style="margin-top: 20px;">
    <a href="/addbook" style="display: inline-block; padding: 10px 20px; background-color: #4CAF50; color: white; text-decoration: none; border-radius: 5px;">Add Book</a>
  </div>
</div>